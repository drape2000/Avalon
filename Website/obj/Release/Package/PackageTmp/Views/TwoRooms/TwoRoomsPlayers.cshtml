             bool autoSelected = false;
         <select name="PlayerNames">  
             
             @foreach (var item in Model.twoRoomsList)
                    {
                        bool wasSelected = Model.LastSelected != null && Model.LastSelected.Count > i && Model.LastSelected[i] == item.Name;
