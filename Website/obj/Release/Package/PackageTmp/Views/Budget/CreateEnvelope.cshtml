@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>Create Envelope</title>
    </head>
    <link rel="stylesheet" type="text/css" href="/Content/BudgetStyle.css"/>
    <body>
        @using (Html.BeginForm("RunCreateEnvelope", "Budget", FormMethod.Post, new {}))
        {
            <div>
                <form>
                    <input type="text" name="Envelope" value="" class="buttonCustom"  /> <a class="text">Name</a><br/>
