        @using (Html.BeginForm("RunUpdateBudget", "Budget", new RouteValueDictionary() { {"envelopeValue", @Request.QueryString["envelopeValue"]} }))
         {
             <form>
                 <div>
                      @foreach (var item in Model.Folders)
